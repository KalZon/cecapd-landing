---
import instituciones from "../config/convenios.json"
---
<div class="my-5">
    <h1 id="convenios" class="text-center text-2xl md:text-4xl font-bold mb-5">Convenios</h1>
    <div class="grid grid-cols-3 gap-2 md:gap-8 place-items-center h-full">
        {
            instituciones.map(
                ({title, img, width, link}) =>(
                    
                    <a class="h-24 w-5/6 flex justify-center overflow-hidden items-center bg-gradient-to-b from-green-300/60 to-green-900/30 hover:from-green-300 hover:to-green-900/30 rounded-sm" href={link} target="_blank" rel="noopener noreferrer">
                        <img width={width} class="px-1 object-contain" src=`../../instituciones/${img}` alt={title}>
                    </a>            
                    
                )
            )
        }
    </div>
</div>
