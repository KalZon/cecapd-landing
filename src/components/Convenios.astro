---
import instituciones from "../config/convenios.json"
---
<h1 id="convenios" class="text-center text-2xl md:text-4xl font-bold mb-5">Convenios</h1>
<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-5 place-items-center h-full">
    {
        instituciones.map(
            ({title, img}) =>(
                <div class="h-full w-5/6 flex justify-center items-center bg-gradient-to-b from-slate-300/20 to-black/40 rounded-sm">
                    <img class="size-5/6 object-contain p-3" src=`../../instituciones/${img}` alt={title}>
                </div>
                
            )
        )
    }
</div>

<style>
    img{
        background: linear-gradient(#ffffff1a 0%, #0000 100%);
    }
</style>