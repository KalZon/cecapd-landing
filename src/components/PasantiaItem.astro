---
const {title, img, id} = Astro.props
---

<!-- component -->

<article class="relative w-full h-64 bg-cover bg-center group rounded-lg overflow-hidden shadow-lg hover:shadow-2xl  transition duration-300 ease-in-out"
style=`background-image: url(${img});`>
    <div class="absolute inset-0 bg-black bg-opacity-50 group-hover:opacity-80 transition duration-300 ease-in-out"></div>
    <div class="relative w-full h-full px-4 sm:px-6 lg:px-4 flex justify-center items-center">
        <h3 class="text-center">
            <a class="text-white text-2xl font-bold text-center" href=`/pasantias/${id}`>
            <span class="absolute inset-0"></span>
            {title}
            </a>
        </h3>
    </div>
</article>  
